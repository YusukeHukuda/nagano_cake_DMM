<div class="row">
  <div class="col-md-3">
    <h2 class= "mt-3">ジャンル一覧・追加</h2>

<%= form_with model: [:admin, @genre] do |f| %>
  <div class="form-group">
    <label><%= f.label :name, "ジャンル名" %></label>
    <label><%= f.text_field :name, placeholder: "ジャンル名", class:"form-control" %></label>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
      </tr>
      <td>
        <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %>
      </td>
    <% end %>
  </tbody>
</table>
</div>
</div>