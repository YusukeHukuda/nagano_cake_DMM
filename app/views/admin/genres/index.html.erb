<div class="row">
  <div class="col-md-3">
    <h2 class= "mt-3">ジャンル一覧・追加</h2>

<%= form_with model: [:admin, @genre] do |f| %>
  <div class="form-group">
    <label><%= f.label :name, "ジャンル名" %></label>
    <label><%= f.text_field :name, placeholder: "ジャンル名", class:"form-control" %></label>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>
<% end %>

<tbody>
<% @genres.each do |genre| %>
<%= genre.name %>
<% end %>
</tbody>
</div>
</div>