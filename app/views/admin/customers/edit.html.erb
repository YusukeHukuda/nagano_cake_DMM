<h2><%= @customer.last_name + first_name %>さんの会員情報編集</h2>

<p>会員ID<%= @customer.id %></p>

<%= form_with model: [:admin, @customer] do |f| %>

<div>
  <%= f.label :last_name, :first_name, "氏名" %>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %><br>

  <%= f.label :last_name_kana, :first_name_kana, "フリガナ" %>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %><br>

  <%= f.label :postal_code, "郵便番号" %>
  <%= f.text_field :postal_code %>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
  <%= f.label :telephone_number, "電話番号" %>
  <%= f.text_field :telephone_number %>
  <%= f.label :email, "メールアドレス" %>
  <%= f.text_field :email %>
  <%= f.label :is_deleted, "会員ステータス" %>
  <%= f.radio_button :customer, :false %>
  <%= f.label :customer, "有効" %>
  <%= f.radio_button :customer, :true %>
  <%= f.label :customer, "退会" %>
  <%= f.submit '変更を保存' %>
</div>

<% end %>
